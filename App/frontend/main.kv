	                    on_release: app.on_base32()    
	                    IconLeftWidget:
	                        icon: "img/enc10.png"	
	                TwoLineIconListItem:
	                    text: "base16"
	                    secondary_text: "Encrypt type base16"
	                    on_release: app.on_base16()    
	                    divider:None
	                    IconLeftWidget:
	                        icon: "img/a2.png"
